@model Epicurious.MVC.ViewModels.RecipeViewModel

<h2 class="mb-4">Add a New Recipe</h2>

<form asp-action="AddRecipe" asp-controller="Recipe" method="post" class="needs-validation col-5" novalidate>
    <div class="form-group">
        <label asp-for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" required>
        <div class="invalid-feedback">Title is required.</div>
    </div>

    <div class="form-group">
        <label asp-for="Ingredients" class="form-label">Ingredients</label>
        <textarea asp-for="Ingredients" class="form-control" rows="5" required></textarea>
        <div class="invalid-feedback">Ingredients are required.</div>
    </div>

    <div class="form-group">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
        <div class="invalid-feedback">Description is required.</div>
    </div>

    <div class="form-group">
        <label asp-for="ImageUrl" class="form-label">ImageUrl</label>
        <input asp-for="ImageUrl" class="form-control" required>
        <div class="invalid-feedback">ImageUrl is required.</div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Add Recipe</button>
</form>
