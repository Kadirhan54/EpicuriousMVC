@using Epicurious.Domain.Entities
@model IEnumerable<Recipe>

<div class="container mt-3">
    <h2>Recipes</h2>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Title</th>
                <th>Ingredients</th>
                <th>Description</th>
                <th>Created By</th>
                <th>Created On</th>
                <th>Image</th>

                <th width="20px">Update</th>
                <th width="20px">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var recipe in Model.OrderBy(r => r.Title))
            {
                <tr>
                    <td>@recipe.Title</td>
                    <td>@recipe.Ingredients</td>
                    <td>@recipe.Description</td>
                    <td>@recipe.CreatedByUserId</td>
                    <td>@recipe.CreatedOn</td>
                    <td>
                        <img src="@recipe.ImageUrl" alt="Description of the image">
                    </td>

                    <td><a href="/recipe/UpdateRecipe/@recipe.Id" class="btn btn-success">Update</a></td>
                    <td><a href="/recipe/DeleteRecipe/@recipe.Id" class="btn btn-danger">Delete</a></td>

@*                     <td>
                        <form method="get" action="@Url.Action("UpdateRecipe", "Recipe")/@recipe.Id">
                            <button type="submit">Update Recipe</button>
                        </form>
                    </td>
                    <td>
                        <form method="get" action="@Url.Action("DeleteRecipe", "Recipe")/@recipe.Id">
                            <button type="submit">Delete</button>
                        </form>
                    </td> *@

                </tr>
            }
        </tbody>
    </table>
</div>
